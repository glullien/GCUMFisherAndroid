<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar" />

    <style name="OverPrint" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/overPrintTextSize</item>
        <item name="android:textColor">@color/overPrint</item>
        <item name="android:shadowColor">@color/overPrintShadow</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="OverPrintLiked" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/overPrintTextSize</item>
        <item name="android:textColor">@color/overPrintLiked</item>
        <item name="android:shadowColor">@color/overPrintShadow</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OverPrintSmall" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/overPrintSmallTextSize</item>
        <item name="android:textColor">@color/overPrint</item>
        <item name="android:shadowColor">@color/overPrintShadow</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
